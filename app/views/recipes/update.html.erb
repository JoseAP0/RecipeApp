<%= form_with model: @recipe, url: recipes_path, method: :patch do |form| %>

  <%= form.label 'Recipe Title' %>
  <%= form.text_field :name %>

  <%= form.label 'Description' %>
  <%= form.text_field :description %>

  <%= form.fields_for :ingredients do |ingredient_form| %>
    <%= ingredient_form.label :name , 'Ingredients'%>
    <%= ingredient_form.text_area :name %>
  <%  end %>

  <%= form.label 'Duration' %>
  <%= form.text_field :duration %>

  <%= form.label 'Way of preparation' %>
  <%= form.text_area :prepare %>

  <%= form.submit 'save' %>
<%  end %>