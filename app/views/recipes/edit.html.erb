<%= form_with model: @recipe, url: { action: "update", id: @recipe.id }, method: :patch do |form| %>

  <%= form.label 'Recipe Title' %>
  <%= form.text_field :name %>

  <%= form.label 'Description' %>
  <%= form.text_field :description %>

  <% @recipe.ingredients.each do |ingredient| %>
  <%= form.fields_for :ingredients do |ingredient_form| %>
    <%= ingredient_form.hidden_field :id, value: ingredient.id %>
    <%= ingredient_form.label :name , 'Ingredients'%>
    <%= ingredient_form.text_area :name %>
    <% end %>
  <%  end %>

  <%= form.label 'Duration' %>
  <%= form.text_field :duration %>

  <%= form.label 'Way of preparation' %>
  <%= form.text_area :prepare %>

  <%= form.submit 'save' %>
<%  end %>